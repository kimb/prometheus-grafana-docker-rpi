# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
max_line_length = 80
indent_size = 2

[*.json]
indent_size = 2

[Makefile]
indent_style = tab

[*.{yaml,yml}]
indent_size = 2
trim_trailing_whitespace = false

[docker-compose{,.*}.{yaml,yml}]
indent_style = space
indent_size = 2
